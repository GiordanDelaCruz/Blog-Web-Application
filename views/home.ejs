<!-- Header Template -->
<%- include('partials/header'); -%>

<h1>Home</h1>
<p> <%= homeContent %> </p>

<!-- Render all the elements in the post array collection -->
<% postCollection.forEach( function(post){ %>
  <h1> <%= post.postTitle %> </h1>
  <p>
    <%= post.postBody.substring(0, 100) + "..."; %>
    <a href="/posts/<%= post.postTitle %>">Read More</a>
  </p>
<% }); %>

<!-- Footer Template -->
<%- include('partials/footer'); -%>
